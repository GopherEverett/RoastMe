<div class="container">
    <br>
    <div class="row">
        <div class="col">
            <div>
                <a class="btn btn-secondary" href="/{{user._id}}/roasts/new">Add a Roast</a>
            </div>
        </div>
        <div class="col-md-8 text-center">
            {{!-- User image --}}
            <div>
                <a href="/user"><img  class="img-thumbnail" src="{{user.imgLink}}" alt=""></a>
            </div>
            <div>
                <h2 class="text-white">{{user.userName}}</h2>
            </div>
            {{!-- Cards for each roast --}}
            <div>
                {{#each user.roasts}}
                <div class="card w-90">
                    <div class="card-body">
                        <a href="/{{../user._id}}/roasts/{{id}}">
                            <h3>{{content}}</h3>
                        </a>
                        <p>{{createdOn}}</p>
                        <p> Has {{jabs.length}} Jabs</p>
                    </div>
                </div> <br>
                {{/each}}
            </div>
        </div>
        <div class="col">
        </div>
    </div>
</div>