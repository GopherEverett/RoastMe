<div class="container">
    <div>
        <img src="{{user.imgLink}}" alt="">
    </div>
    <div>
        <h2>{{user.userName}}</h2>
    </div>
    <div>
        <a class="btn btn-dark" href="/{{user._id}}/roasts/new">Add a Roast</a>
    </div>
    <div>
        {{#each user.roasts}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <a href="/{{../user._id}}/roasts/{{id}}">
                    <h3>{{content}}</h3>
                </a>
                <p>{{createdOn}}</p>
                <p> Has {{jabs.length}} Jabs</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>