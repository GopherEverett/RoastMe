<div class="container">
    <br>
    <div class="row">
        <div class="col text-center">
            <div>
                <a class="btn btn-dark" href="user/new">Want to be roasted? </a>
            </div>
        </div>
        <div class="col-md-8 text-center">
                <h2 class="text-white">Click picture to see Roasts</h2>
            {{#each users}}
            <div class="">
                <div class="card-img-top">
                    <a href="user/{{id}}">
                        <img  class="img-thumbnail" src="{{imgLink}}">
                    </a>
                </div>
                <div class="card  text-center w-70" >
                    <div class="card-body">
                        <h4>
                            {{userName}}
                        </h4>
                        <p> Has {{roasts.length}} Roasts</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="col">
        </div>

    </div>
</div>